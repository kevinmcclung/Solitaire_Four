<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonnysappbakery.solitairefour">

    <application
        android:resizeable="false"
        android:smallScreens="true" android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SolitaireFour"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name="com.sonnysappbakery.solitairefour.MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|smallestScreenSize|screenLayout|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>